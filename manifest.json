{
  "manifest_version": 2,
  "name": "ProcessingChecklist",
  "version": "1.0",
  "description": "Helps users track their progress when filling out long forms.",
  "permissions": [
    "storage",
    "tabs",
    "downloads",
    "clipboardRead",
    "clipboardWrite",
    "*://rapid.slacal.com/*",
    "https://rapid.slacal.com/Operations/AttendanceSheet/Details",
    "file:///*"
  ],
  "browser_action": {
    "default_title": "Processing Checklist",
    "default_popup": "menu.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["utils.js", "config-loader-simple.js", "kendo-widget-utils.js", "alphabetize-helper.js", "tracking-helper.js", "clipboard-listener.js", "content.js"],
      "css": ["style.css"],
      "run_at": "document_end"
    },
    {
      "matches": [
        "*://rapid.slacal.com/Insurer/Search",
        "*://rapid.slacal.com/*CompanyDetails.aspx*",
        "*://rapid.slacal.com/*AdmittedCompaniesDetails.aspx*"
      ],
      "js": ["insurer-history.js"],
      "css": ["insurer-history.css"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://rapid.slacal.com/policy/search*",
        "*://rapid.slacal.com/Policy/Search*",
        "*://rapid.slacal.com/policy/transactionSearch*",
        "*://rapid.slacal.com/Policy/TransactionSearch*"
      ],
      "js": ["policy-search-helper.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    "popout.html",
    "tracking.html",
    "extended-history.html",
    "calculator.html",
    "changes-report.html",
    "changes-report.js",
    "clipboard-manager.html",
    "style.css",
    "checklist-config.json",
    "favicon.svg"
  ]
}
