{
  "manifest_version": 2,
  "name": "ProcessingChecklist",
  "version": "1.0",
  "description": "Helps users track their progress when filling out long forms.",
  "permissions": [
    "storage",
    "tabs", "<all_urls>"
  ],
  "browser_action": {
    "default_title": "Processing Checklist",
    "default_popup": "menu.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["config-loader-simple.js", "kendo-widget-utils.js", "tracking-helper.js", "content.js"],
      "css": ["style.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "popout.html",
    "tracking.html",
    "extended-history.html",
    "style.css",
    "checklist-config.json"
  ]
}
